{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "pnpm dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      // Hugoのログを解析して「起動完了」を判定する設定
      "problemMatcher": [
        {
          "owner": "hugo",
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Start building sites",
            "endsPattern": "Web Server is available at"
          }
        }
      ]
    }
  ]
}
